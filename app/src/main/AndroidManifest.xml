<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.team.stockify">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:name=".Stockify"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stockify">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="ar.team.stockify.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>

        <activity android:name=".search.SearchActivity"> </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".UserActivity"></activity>

        <activity android:name=".SplashActivity" android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <activity android:name=".ui.main.MainActivity"></activity>

        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ar.team.stockify.ui.search.SearchActivity"></activity>

        <activity android:name="ar.team.stockify.ui.details.DetailsActivity"></activity>

    </application>

</manifest>